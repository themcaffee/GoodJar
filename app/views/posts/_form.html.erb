<%= minimal_form_for @post, html: { class: "form-horizontal" } do |f| %>
  <%= f.error_notification %>

  <%= f.input :content , placeholder: "What positive thing has happened today?", input_html: { class: "vert" } %>

  <div class="form-actions text-center">
    <%= f.button :submit, "Add to jar", :class => "btn-primary btn-lg" %>
  </div>
<% end %>
